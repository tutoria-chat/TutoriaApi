files:
  "/etc/nginx/conf.d/https-redirect.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 8080;

          if ($http_x_forwarded_proto = 'http') {
              return 301 https://$host$request_uri;
          }
      }

container_commands:
  01_reload_nginx:
    command: "sudo service nginx reload"
